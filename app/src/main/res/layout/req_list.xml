<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    tools:layout_editor_absoluteY="81dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/emp_list_image"
        app:layout_constraintStart_toEndOf="@+id/check_req"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:textDirection="rtl"
            android:id="@+id/emp_list_name"
            android:layout_width="164dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="الإسم"
            android:textColor="@color/BurlyWood"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="13dp" />

        <TextView
            android:textDirection="rtl"
            android:id="@+id/emp_list_phone"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingTop="2dp"
            android:text="البريد الإلكتروني"
            android:textColor="@color/BurlyWood"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="240dp"
            tools:layout_editor_absoluteY="49dp" />

        <TextView
            android:textDirection="rtl"
            android:id="@+id/emp_list_address"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="العنوان"
            android:textColor="@color/BurlyWood"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="202dp"
            tools:layout_editor_absoluteY="79dp" />


    </LinearLayout>

    <Button
        android:id="@+id/check_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:layout_marginStart="5dp"
        android:background="@color/Turquoise"
        android:text="عرض"
        android:textAllCaps="false"
        android:textColor="@color/Black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/emp_list_image"
        android:layout_width="58dp"
        android:layout_height="70dp"
        android:layout_marginEnd="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/linearLayout"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher" />

</android.support.constraint.ConstraintLayout>